{
  "name": "gitgo",
  "displayName": "GitGo",
  "publisher": "RuntimeSync",
  "description": "Publish coding solutions to GitHub with one command",
  "version": "0.0.9",
  "icon": "assets/icon.png",

  "repository": {
    "type": "git",
    "url": "https://github.com/RuntimeSync/GitGo"
  },

  "keywords": [
    "leetcode",
    "dsa",
    "automation",
    "git",
    "github",
    "productivity",
    "vscode-extension"
  ],

  "engines": {
    "vscode": "^1.80.0"
  },

  "categories": ["Other"],

  "activationEvents": [
    "onCommand:gitgo.publishSolution",
    "onCommand:gitgo.changeRepository"
  ],

  "main": "./dist/extension.js",

  "contributes": {
    "commands": [
      {
        "command": "gitgo.publishSolution",
        "title": "GitGo: Publish Solution"
      },
      {
        "command": "gitgo.changeRepository",
        "title": "GitGo: Change Repository"
      }
    ],

    "configuration": {
      "title": "GitGo",
      "properties": {

        "gitgo.repoPath": {
          "type": "string",
          "default": "",
          "description": "Local path to the GitHub repository used by GitGo"
        },

        "gitgo.author.name": {
          "type": "string",
          "default": "",
          "description": "Your full name"
        },

        "gitgo.author.github": {
          "type": "string",
          "default": "",
          "description": "Your GitHub profile URL"
        },

        "gitgo.author.linkedin": {
          "type": "string",
          "default": "",
          "description": "Your LinkedIn profile URL"
        },

        "gitgo.defaultPushMode": {
          "type": "string",
          "enum": ["normal", "pr"],
          "default": "normal",
          "description": "Default push mode"
        },

        "gitgo.defaultProblemType": {
          "type": "string",
          "enum": ["leetcode", "normal"],
          "default": "leetcode",
          "description": "Default problem type"
        },

        "gitgo.lastParentFolder": {
          "type": "string",
          "default": "",
          "description": "Last selected parent folder for publishing solutions"
        }

      }
    }
  },

  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },

  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.80.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },

  "dependencies": {
    "@vscode/vsce": "^3.7.1"
  }
}
